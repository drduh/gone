{
  "port":          8080,
  "userMask":      true,
  "audit": {
    "logFile":     "",
    "timeFormat":  "Monday Jan 2 15:04"
  },
  "auth": {
    "basic": {
      "field":     "X-Auth",
      "token":     "mySecret"
    },
    "require": {
      "download":  true,
      "list":      false,
      "message":   false,
      "upload":    false,
      "wall":      false
    }
  },
  "error": {
    "copy":        "file copy fail",
    "deny":        "not authorized",
    "fileSize":    "file too large",
    "form":        "file form fail",
    "noFilename":  "need file name",
    "noFiles":     "no files found",
    "notFound":    "file not found",
    "rateLimit":   "limit exceeded",
    "tmplExec":    "failed to exec",
    "tmplParse":   "failed parsing"
  },
  "index": {
    "csp":         true,
    "showBuild":   true,
    "title":       "gone",
    "cookie": {
      "id":        "goneTheme",
      "time":      "192h"
    },
    "placeholder": {
      "auth":      "secret required",
      "filename":  "enter filename",
      "message":   "enter message"
    },
    "style": {
      "allowPick": true,
      "theme":     "auto",
      "available": [
        "dark",
        "light",
        "navy",
        "rose",
        "green",
        "lime",
        "pink",
        "gold",
        "purple",
        "lush",
        "beach",
        "dusk",
        "neon",
        "night"
      ]
    }
  },
  "limits": {
    "charsMsg":    128,
    "charsWall":   1280,
    "downloads":   1,
    "duration":    "5m",
    "maxSizeMb":   20,
    "perMinute":   30,
    "ticker":      "30s"
  },
  "paths": {
    "assets":      "/assets/",
    "download":    "/download/",
    "heartbeat":   "/heartbeat",
    "list":        "/list",
    "message":     "/msg",
    "random":      "/random/",
    "root":        "/",
    "static":      "/static",
    "upload":      "/upload",
    "wall":        "/wall"
  }
}
