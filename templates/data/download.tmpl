<!-- download.tmpl -->
{{ define "download" }}
    <div class="box">
      <form action="{{ .PathDownload }}"
            method="get">
        <input required type="text"
                       class="selectFilename"
                        name="name"
                 placeholder="enter filename">
        {{ if .AuthDownload }}
        <br>
        <input required type="text"
                       class="selectToken"
                        name="{{ .AuthHeader }}"
                 placeholder="{{ .AuthHolder }}">
        {{ end }}
        <br>
        <input type="submit"
              class="selectSubmit"
              value="download">
      </form>
    </div>
{{ end }}
