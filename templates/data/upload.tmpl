<!-- upload.tmpl -->
{{ define "upload" }}
  <div class="box">
    <form action="{{ .Paths.Upload }}"
          method="post"
         enctype="multipart/form-data">
      <input required type="file"
                     class="selectFile"
                      name="file"
                     title="file to upload">
      <br>
      {{ if .Auth.Require.Upload }} {{ template "auth" . }} {{ end }}
      <input type="number"
            class="selectDownloads"
              max="9999"
              min="1"
             name="downloads"
             step="1"
            title="number of allowed downloads"
      placeholder="1">
      <input type="text"
            class="selectDuration"
             name="duration"
            title="expire file after duration"
      placeholder="{{ .DefaultDuration }}">
      <br>
      <input type="submit"
            class="selectSubmit"
            title="upload selected file"
            value="upload">
    </form>
  </div>
{{ end }}
