<!-- index.tmpl -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ if .Theme }}
    <link rel="stylesheet" href="/assets/style.css">
    <style>
      :root {
        {{ template "theme" . }}
      }
    </style>
    {{ end }}
    <title>{{ .Title }}</title>
  </head>
  <body>
    <div class="container">

    {{ if .Paths.Upload }}
    {{ template "upload" . }}
    {{ end }}

    {{ if .Paths.Download }}
    {{ template "download" . }}
    {{ end }}

    {{ if .Paths.List }}
    {{ template "list" . }}
    {{ end }}

    </div>

    {{ if .Paths.Message }}
    {{ template "message" . }}
    {{ end }}

    {{ template "footer" . }}

  </body>
</html>
