<!-- list.tmpl -->
{{ define "list" }}
  <div class="box">
    {{ if .Storage.Files }}
    <form action="{{ .Paths.List }}"
          method="get">
      {{ if .Auth.Require.List }} {{ template "auth" . }} {{ end }}
      <input class="selectSubmit"
              type="submit"
             value="list">
    </form>
    <form action="{{ .Paths.Download }}"
          method="get">
      <br>
      {{ if .Auth.Require.List }} {{ template "auth" . }} {{ else }}
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Owner</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
        {{ range .Storage.Files }}
        <tr class="list-row">
          <td>
            <label for="{{ .Name }}">{{ .Name }}</label>
            <input id="{{ .Name }}"
                 name="name"
                 type="radio"
                value="{{ .Name }}" required>
          </td>
          <td> <label for="{{ .Name }}">{{ .Size }}</label>          </td>
          <td> <label for="{{ .Name }}">{{ .Owner.Address }}</label> </td>
          <td> <label for="{{ .Name }}">{{ .Time.Remain }}</label>   </td>
        </tr>
        {{ end }}
        </tbody>
      </table>
      {{ end }}
      <br>
      {{ if .Auth.Require.Download }} {{ template "auth" . }} {{ end }}
      <input class="selectSubmit"
             title="download selected file"
              type="submit"
             value="download">
    </form>
    {{ else }}
    <p>{{ .NoFiles }}</p>
    {{ end }}
  </div>
{{ end }}
