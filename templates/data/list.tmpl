<!-- list.tmpl -->
{{ define "list" }}
  <div class="box">
    <form action="{{ .Paths.List }}"
          method="get">
      {{ if .Auth.Require.List }} {{ template "auth" . }} {{ else }}
      {{ if .Storage.Files }}
      <table>
        <tr>
          <th>Name</th>
          <th>Size</th>
          <th>Owner</th>
        </tr>
        {{ range .Storage.Files }}
        <tr>
          <td><a href="/download/{{ .Name }}">{{ .Name }}</a></td>
          <td>{{ .Size }}</td>
          <td>{{ .Owner.Address }}</td>
        </tr>
        {{end}}
      </table>
      {{end}}
      <br>
      {{ end }}
      <input class="selectSubmit"
              type="submit"
             value="list">
    </form>
  </div>
{{ end }}
