<!-- list.tmpl -->
{{ define "list" }}
  <div class="box">
    {{ if not .Storage.Files }}
    <p>{{ .NoFiles }}</p>
    {{ else }}
    {{ if .Auth.Require.List }}
    <form action="{{ .Paths.List }}"
          method="get">
      {{ template "auth" . }}
      <input class="selectSubmit"
              type="submit"
             value="list">
    </form>
    {{ end }}
    <form action="{{ .Paths.Download }}"
          method="get">
      <br>
      {{ if not .Auth.Require.List }}
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Type</th>
            <th>Owner</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
        {{ range .Storage.Files }}
        <tr class="list-row">
          <td>
            <label for="{{ .Id }}">{{ .Name }}</label>
            <input id="{{ .Id }}"
                 name="name"
                 type="radio"
                value="{{ .Id }}" required>
          </td>
          <td> <label for="{{ .Id }}">{{ .Size }}</label>          </td>
          <td> <label for="{{ .Id }}">{{ .Type }}</label>          </td>
          <td> <label for="{{ .Id }}">{{ .Owner.Mask }}</label>    </td>
          <td> <label for="{{ .Id }}">{{ .Time.Remain }}</label>   </td>
        </tr>
        {{ end }}
        </tbody>
      </table>
      <br>
      {{ else }}
      <input class="selectToken"
                id="name"
              name="name"
       placeholder="{{ .Placeholder.Filename}}"
              type="text" required>
      {{ end }}
      {{ if .Auth.Require.Download }} {{ template "auth" . }} {{ end }}
      <input class="selectSubmit"
             title="download selected file"
              type="submit"
             value="download">
    </form>
    {{ end }}
  </div>
{{ end }}
