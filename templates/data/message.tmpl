<!-- message.tmpl -->
{{ define "message" }}
  <div class="container">
    <div class="box">
      <form action="/"
            method="post"
           enctype="application/x-www-form-urlencoded">
        <input type="text"
              class="selectMessage"
               name="message"
          maxlength="{{ .Limits.MsgChars }}"
        placeholder="{{ .Index.Placeholder.Message }}">
        <input type="checkbox"
              class="selectClear"
               name="clear">
        <br>
        {{ if .Auth.Require.Message }}
          {{ template "auth" . }}
        {{ end }}
        <input type="submit"
              class="selectSubmit"
              value="post">
      </form>
    </div>
    <div class="box">
      {{ range .Storage.Messages }}
      <div class="message"><b>{{ .Count }}</b> {{ .Data }}
        <span class="owner">{{ .Owner.Address }} at {{ .Time.Allow }}</span>
      </div>
      <br>
      {{ end }}
      <form action="">
        <button type="submit"
               class="selectRefresh">refresh</button>
      </form>
    </div>
  </div>
{{ end }}
